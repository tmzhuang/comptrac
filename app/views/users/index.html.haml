%body
  %h2 Users
  .tbl-header
    %table
      %thead
        %tr
          %th{:colspan => "3"}
  .tbl-content
    %table
      %tbody
        - @users.each do |user|
          %tr
            %td= link_to user.name, user
            %td= link_to 'Show', user 
            %td= link_to 'Edit', edit_user_path(user) if current_user.is_admin?
            %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
            %td= link_to 'Add Skills', new_user_skill_path(user)
  %br/
  = link_to 'New User', new_user_registration_path
