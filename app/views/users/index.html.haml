%body
  %h2 Users
  %table
    %thead
      %tr
        %th Name
        %th{:colspan => "3"}
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' }
          -#%td= link_to 'Add Skills', add_skills_path(user)
  %br/
  = link_to 'New User', new_user_registration_path
