= form_for(@user_skill) do |f|
  - if @user_skill.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_skill.errors.count, "error")
        prohibited this user_skill from being saved:
      %ul
        - @user_skill.errors.full_messages.each do |message|
          %li= message

  .field
    = f.select :skill_id, Skill.all.collect { |skill| [ skill.name, skill.id ] }
  .field
    = f.label :competence
    %br/
    = f.number_field :competence
  .actions
    = f.submit
