%table
  %thead
    %tr
      %th Name
      %th Category
      %th
  %tbody
    - @skills.each do |skill|
      %tr
        %td= link_to skill.name, skill
        %td= skill.category
        - if current_user.is_admin?
          %td= link_to 'Edit', edit_skill_path(skill)
          %td= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' }
