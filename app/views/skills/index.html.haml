%p#notice= notice
%h1 Listing Skills
%table
  %thead
    %tr
      %th Name
      %th Category
      %th{:colspan => "3"}
  %tbody
    - @skills.each do |skill|
      %tr
        %td= skill.name
        %td= skill.category
        %td= link_to 'Show', skill
        %td= link_to 'Edit', edit_skill_path(skill)
        %td= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Skill', new_skill_path
