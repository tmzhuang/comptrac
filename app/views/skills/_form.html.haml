= form_for(@skill) do |f|
  - if @skill.errors.any?
    #error_explanation
      %h2
        = pluralize(@skill.errors.count, "error")
        prohibited this skill from being saved:
      %ul
        - @skill.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .actions
    = f.submit
